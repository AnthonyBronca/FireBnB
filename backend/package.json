{
  "name": "backend",
  "keywords": [],
  "test": "mocha 'src/tests/**/*.ts'",
  "author": "Anthony Bronca",
  "version": "1.0.0",
  "description": "Typescript clone of Airbnb",
  "main": "dist/app.js",
  "directories": {
    "tests": "tests"
  },
  "scripts": {
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'src/tests/**/*.ts'",
    "sequelize": "sequelize",
    "sequelize-cli": "sequelize-cli",
    "db-reset": "rm -rf ./dist/db/dev.db",
    "db-migrate": "npx dotenv sequelize db:migrate",
    "db-seed": "npx dotenv sequelize db:seed:all",
    "db-build": "npm run db-reset && npm run db-migrate && npm run db-seed",
    "sequelize-build": "npm run db-migrate && npm run db-seed",
    "start": "per-env",
    "setup": "per-env",
    "qs": "tsc && node dist/bin/www",
    "start:development": "tsc && npm run dev",
    "start:production": "npm run sequelize-build && node dist/bin/www",
    "build-development": "rimraf ./dist && tsc",
    "build-production": "tsc",
    "dev": "npm run db-build && ts-node-dev --poll src/bin/www"
  },
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "email-validator": "^2.0.4",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-validator": "^7.0.1",
    "getrandomjs": "^2.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.1",
    "morgan": "^1.10.0",
    "per-env": "^1.0.2",
    "pg": "^8.11.1",
    "sequelize": "^6.32.1",
    "sequelize-cli": "^6.6.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@swc/core": "^1.3.71",
    "@types/chai": "^4.3.5",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/csurf": "^1.11.2",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.5",
    "chai": "^4.3.7",
    "dotenv-cli": "^7.2.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "sinon": "^15.2.0",
    "sqlite3": "^5.1.6",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6",
    "typings": "^2.1.1"
  }
}
